---
const {data} = Astro.props;
import { Image } from 'astro:assets'
---
<a class="link" href={data.url}>
   {data.image && <Image src={data.image} alt={data.title}></Image>}
   <div class="link-content">
    <h1> {data.title}   </h1> 
     <p> {data.description} </p>
   </div>
    
</button>


<style>
    .link {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 350px;
        background-color: rgba(255, 255, 255, 0.699);
        padding: 1rem;
        outline: 1px solid black;
        border-radius: 10px;
        height: 100%;
transition: all .5s linear(0, 0.012 0.9%, 0.05 2%, 0.411 9.2%, 0.517 11.8%, 0.611 14.6%, 0.694 17.7%, 0.765 21.1%, 0.824 24.8%, 0.872 28.9%, 0.91 33.4%, 0.939 38.4%, 0.977 50.9%, 0.994 68.4%, 1);
    }
    a {
        text-decoration: none;
        font-weight: 500;
    }
    .link-content {
        color: var(--color-text);
    }
    a:hover {
        background-color: white;
        outline: 3px var(--color-accent) solid;
         box-shadow: 0px 0px 18px -2px rgba(0, 0, 0, 0.21);
        transition: all .5s linear(0, 0.012 0.9%, 0.05 2%, 0.411 9.2%, 0.517 11.8%, 0.611 14.6%, 0.694 17.7%, 0.765 21.1%, 0.824 24.8%, 0.872 28.9%, 0.91 33.4%, 0.939 38.4%, 0.977 50.9%, 0.994 68.4%, 1);
        scale: 1.02;
    }
    h1 {
        font-weight: 500;
    }
</style>