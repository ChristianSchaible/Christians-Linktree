<script>
const letters = document.querySelectorAll('.variable span');

letters.forEach((letter, index) => {
  letter.addEventListener('mouseenter', () => {
    letters[index - 1]?.classList.add('near');
    letters[index + 1]?.classList.add('near');
  });

  letter.addEventListener('mouseleave', () => {
    letters[index - 1]?.classList.remove('near');
    letters[index + 1]?.classList.remove('near');
  });
});
</script>

